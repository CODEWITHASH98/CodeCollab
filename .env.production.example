# Production Environment Configuration
# Copy this to .env.production and fill in your values

# ============================================
# REQUIRED - Application will not start without these
# ============================================

# Database (Supabase, Neon, or any PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database?pgbouncer=true

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# Client URL (your deployed frontend)
CLIENT_URL=https://your-app.vercel.app

# ============================================
# OPTIONAL - Features work without these but limited
# ============================================

# Redis (Upstash, Redis Cloud, or self-hosted)
REDIS_URL=redis://default:password@host:6379

# AI Services (at least one recommended)
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxx
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxx

# OAuth (optional - for social login)
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxx

GITHUB_CLIENT_ID=Iv1.xxxxxxxxxxxx
GITHUB_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxx

# ============================================
# PRODUCTION SETTINGS
# ============================================
NODE_ENV=production
PORT=3001

# Session settings
SESSION_SECRET=another-random-secret-string

# Rate limiting (requests per 15 minutes)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging level (error, warn, info, debug)
LOG_LEVEL=info
