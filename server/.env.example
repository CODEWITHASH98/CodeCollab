# CodeCollab Server Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (PostgreSQL/Supabase)
# ===========================================
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?pgbouncer=true"
DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRY=7d
GUEST_TOKEN_EXPIRY=2h

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# ===========================================
# REDIS (Caching & Rate Limiting)
# ===========================================
REDIS_URL=redis://127.0.0.1:6379

# ===========================================
# AI SERVICES (Optional - enables AI features)
# ===========================================
# OpenAI (GPT-4 for premium hints/reviews)
OPENAI_API_KEY=sk-your-openai-key

# Groq (Fast, free tier - recommended primary)
GROQ_API_KEY=gsk_your-groq-key

# Google Gemini (Free fallback - 1M tokens/month free)
# Get key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# ===========================================
# OAUTH PROVIDERS (Optional)
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# ===========================================
# CODE EXECUTION (Piston API)
# ===========================================
PISTON_API_URL=https://emkc.org/api/v2/piston
EXECUTION_TIMEOUT=10000

# ===========================================
# MONITORING (Optional)
# ===========================================
# Sentry Error Tracking (Free: 5K errors/month)
# Get DSN at: https://sentry.io
SENTRY_DSN=https://your-key@sentry.io/project-id

# Minimum log level: debug, info, warning, error
LOG_LEVEL=info
